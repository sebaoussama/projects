/*fi la classe person galna zido method tkon fiha shoppingcart psa shopping cart khassa bl person*/

public class Person {
	private String firstname;
	private String secondname;
	private int age;
	private String gender;
	private String contry;
	public Person(String firstname, String secondname, int age , String gender, String contry) {
		
		this.firstname=firstname;
		this.secondname=secondname;
		this.age=age;
		this.gender=gender;
		this.contry=contry;
		
	}
 public String getFirstname() {
	return firstname;
}
 public void setFirstname(String f) {
	 firstname=f;
 }
 public String getSecondname() {
	 return secondname;
 }
 public void setSecondname(String s) {
	 secondname=s;
 }
 public int getAge() {
	 return age;
 }
 public void setAge(int a) {
	 age=a;
 }
 public String getGender() {
	 return gender;
 }
 public void setGender(String g) {
	 gender=g;
 }
 public String getContry() {
	 return contry;
 }
 public void setCountry(String c) {
	 contry=c;
	 }
 public String toString() {
	 return(this.firstname +" "+ this.secondname+ " "+ this.age +" "+ this.gender +" "+ this.contry +".");
 }
 
	
 public void display() {
	 System.out.println("the firstname : "+firstname);
	 System.out.println("the secondname : "+secondname);
	 System.out.println("the age : "+age);
	 System.out.println("the gender : "+gender);
	 System.out.println("the contry : "+contry);
 }

 }
